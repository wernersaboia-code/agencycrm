// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ==================== ENUMS ====================

enum UserRole {
  ADMIN
  MANAGER
  USER
}

enum UserStatus {
  ACTIVE
  INACTIVE
  PENDING
}

enum LeadStatus {
  NEW // Novo - n√£o contatado
  CONTACTED // Contatado (email enviado)
  OPENED // Abriu o email
  CLICKED // Clicou em link
  REPLIED // Respondeu
  CALLED // Liga√ß√£o realizada
  INTERESTED // Demonstrou interesse
  NOT_INTERESTED // N√£o tem interesse
  NEGOTIATING // Em negocia√ß√£o
  CONVERTED // Convertido (virou cliente)
  UNSUBSCRIBED // Descadastrado
  BOUNCED // Email inv√°lido
}

enum LeadSource {
  MANUAL // Cadastrado manualmente
  IMPORT // Importado via CSV
  MARKETPLACE // Comprado no marketplace
  WEBSITE // Capturado via formul√°rio
  REFERRAL // Indica√ß√£o
  OTHER // Outros
}

enum CompanySize {
  MICRO // 1-10 funcion√°rios
  SMALL // 11-50
  MEDIUM // 51-200
  LARGE // 201-500
  ENTERPRISE // 500+
}

enum CampaignStatus {
  DRAFT // Rascunho
  SCHEDULED // Agendada
  SENDING // Enviando
  SENT // Enviada
  PAUSED // Pausada
  CANCELLED // Cancelada
}

enum EmailSendStatus {
  PENDING // Aguardando envio
  SENT // Enviado
  DELIVERED // Entregue
  OPENED // Aberto
  CLICKED // Clicou
  REPLIED // Respondeu
  BOUNCED // Falhou
  COMPLAINED // Marcou como spam
}

enum CallResult {
  ANSWERED // Atendeu
  NO_ANSWER // N√£o atendeu
  BUSY // Ocupado
  VOICEMAIL // Caixa postal
  WRONG_NUMBER // N√∫mero errado
  INTERESTED // Atendeu e tem interesse
  NOT_INTERESTED // Atendeu mas sem interesse
  CALLBACK // Pediu para retornar
  MEETING_SCHEDULED // Agendou reuni√£o
}

enum TemplateCategory {
  PROSPECTING // Primeiro contato / Prospec√ß√£o
  FOLLOW_UP // Follow-up
  PROPOSAL // Proposta comercial
  THANK_YOU // Agradecimento
  REACTIVATION // Reativa√ß√£o de lead frio
  NEWSLETTER // Newsletter / Novidades
  OTHER // Outros
}

enum CampaignType {
  single
  sequence
}

enum StepCondition {
  always
  not_opened
  opened
  not_clicked
  clicked
}

enum EnrollmentStatus {
  active
  paused
  completed
  stopped
}

// ==================== USU√ÅRIO ====================

model User {
  id       String     @id @default(cuid())
  email    String     @unique
  name     String?
  avatar   String?
  role     UserRole   @default(USER)
  status   UserStatus @default(ACTIVE)
  language String     @default("pt-BR")
  timezone String     @default("America/Sao_Paulo")

  // Configura√ß√µes AgencyCRM
  resendApiKey      String? // API key do Resend (criptografada)
  activeWorkspaceId String? // Workspace ativo no momento

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  lastLoginAt DateTime?

  // Relacionamentos
  workspaces Workspace[]

  @@map("users")
}

// ==================== WORKSPACE ====================

model Workspace {
  id          String  @id @default(cuid())
  name        String
  description String?
  color       String  @default("#3B82F6")
  logo        String?

  // Configura√ß√µes de email
  senderName  String?
  senderEmail String?

  // Configura√ß√µes SMTP
  smtpProvider String? // google, zoho, outlook, custom
  smtpHost     String? // smtp.gmail.com, smtp.zoho.com, etc.
  smtpPort     Int? // 587, 465, etc.
  smtpUser     String? // email do usu√°rio
  smtpPass     String? // senha de app (criptografada)
  smtpSecure   Boolean @default(true) // TLS/SSL

  // Relacionamentos
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Entidades do workspace
  leads          Lead[]
  campaigns      Campaign[]
  emailTemplates EmailTemplate[]
  calls          Call[]
  tags           Tag[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@map("workspaces")
}

// ==================== LEAD ====================

model Lead {
  id String @id @default(cuid())

  // Contato
  firstName String
  lastName  String?
  email     String
  phone     String?
  mobile    String?

  // Empresa
  company     String?
  jobTitle    String?
  website     String?
  taxId       String? // CNPJ, VAT, EIN, etc.
  industry    String? // Segmento
  companySize CompanySize? // Porte da empresa

  // Localiza√ß√£o
  address    String?
  city       String?
  state      String?
  postalCode String?
  country    String? // C√≥digo ISO: BR, DE, US

  // Status e Controle
  status LeadStatus @default(NEW)
  source LeadSource @default(MANUAL)
  notes  String?    @db.Text

  // Relacionamentos
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  emailSends  EmailSend[]
  calls       Call[]
  tags        TagsOnLeads[]
  enrollments CampaignEnrollment[]

  // Importa√ß√£o
  importedAt  DateTime?
  importBatch String?

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([email, workspaceId])
  @@index([workspaceId])
  @@index([status])
  @@index([source])
  @@index([country])
  @@index([industry])
  @@index([importBatch])
  @@map("leads")
}

// ==================== TAG ====================

model Tag {
  id    String @id @default(cuid())
  name  String
  color String @default("#6B7280")

  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  leads TagsOnLeads[]

  @@unique([name, workspaceId])
  @@index([workspaceId])
  @@map("tags")
}

model TagsOnLeads {
  leadId String
  lead   Lead   @relation(fields: [leadId], references: [id], onDelete: Cascade)

  tagId String
  tag   Tag    @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([leadId, tagId])
  @@map("tags_on_leads")
}

// ==================== EMAIL TEMPLATE ====================

model EmailTemplate {
  id       String           @id @default(cuid())
  name     String
  subject  String
  body     String           @db.Text
  category TemplateCategory @default(PROSPECTING)
  isActive Boolean          @default(true)

  workspaceId String
  workspace   Workspace      @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  campaigns   Campaign[]
  steps       CampaignStep[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([workspaceId])
  @@index([category])
  @@map("email_templates")
}

// ==================== CAMPAIGN ====================

model Campaign {
  id          String         @id @default(cuid())
  name        String
  description String?
  status      CampaignStatus @default(DRAFT)

  // üÜï Tipo de campanha (single ou sequence)
  type              CampaignType @default(single)
  stopOnUnsubscribe Boolean      @default(true)
  stopOnConverted   Boolean      @default(true)

  // Template
  templateId String?
  template   EmailTemplate? @relation(fields: [templateId], references: [id])

  // Ou conte√∫do direto (se n√£o usar template)
  subject String?
  body    String? @db.Text

  // Filtros de destinat√°rios
  filterStatus LeadStatus[]
  filterTags   String[]

  // M√©tricas
  totalRecipients Int @default(0)
  totalSent       Int @default(0)
  totalOpened     Int @default(0)
  totalClicked    Int @default(0)
  totalReplied    Int @default(0)
  totalBounced    Int @default(0)

  // Datas
  scheduledAt DateTime?
  sentAt      DateTime?

  workspaceId String
  workspace   Workspace   @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  emailSends  EmailSend[]
  calls       Call[]

  // üÜï Relacionamentos para sequ√™ncias
  steps       CampaignStep[]
  enrollments CampaignEnrollment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([workspaceId])
  @@index([status])
  @@map("campaigns")
}

model CampaignStep {
  id         String   @id @default(cuid())
  campaignId String
  campaign   Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)

  order      Int // 1, 2, 3, 4, 5
  templateId String?
  template   EmailTemplate? @relation(fields: [templateId], references: [id], onDelete: SetNull)
  subject    String
  content    String         @db.Text

  delayDays  Int @default(0)
  delayHours Int @default(0)

  condition StepCondition @default(always)

  sends EmailSend[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([campaignId])
  @@map("campaign_steps")
}

model CampaignEnrollment {
  id         String   @id @default(cuid())
  campaignId String
  campaign   Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  leadId     String
  lead       Lead     @relation(fields: [leadId], references: [id], onDelete: Cascade)

  currentStep Int              @default(1)
  status      EnrollmentStatus @default(active)

  nextSendAt  DateTime?
  startedAt   DateTime  @default(now())
  completedAt DateTime?
  pausedAt    DateTime?
  stoppedAt   DateTime?
  stopReason  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([campaignId, leadId])
  @@index([campaignId])
  @@index([leadId])
  @@index([status, nextSendAt])
  @@map("campaign_enrollments")
}

// ==================== EMAIL SEND ====================

model EmailSend {
  id String @id @default(cuid())

  campaignId String
  campaign   Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)

  leadId String
  lead   Lead   @relation(fields: [leadId], references: [id], onDelete: Cascade)

  // üÜï Campos para sequ√™ncias
  stepId     String?
  step       CampaignStep? @relation(fields: [stepId], references: [id], onDelete: SetNull)
  stepNumber Int?

  status   EmailSendStatus @default(PENDING)
  resendId String?

  // Rastreamento
  openedAt     DateTime?
  openCount    Int       @default(0)
  clickedAt    DateTime?
  clickCount   Int       @default(0)
  repliedAt    DateTime?
  bouncedAt    DateTime?
  bounceReason String?

  sentAt    DateTime?
  createdAt DateTime  @default(now())

  @@index([campaignId])
  @@index([leadId])
  @@index([stepId])
  @@index([status])
  @@map("email_sends")
}

// ==================== CALL ====================

model Call {
  id String @id @default(cuid())

  leadId String
  lead   Lead   @relation(fields: [leadId], references: [id], onDelete: Cascade)

  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  campaignId String?
  campaign   Campaign? @relation(fields: [campaignId], references: [id], onDelete: SetNull)

  result   CallResult
  duration Int?       @db.Integer
  notes    String?    @db.Text

  followUpAt DateTime?
  calledAt   DateTime  @default(now())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([leadId])
  @@index([workspaceId])
  @@index([campaignId])
  @@index([calledAt])
  @@map("calls")
}
